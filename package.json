{
  "name": "CodeAnalyzer",
  "version": "0.1.0",
  "description": "A minimal Electron application",
  "main": "out/main.js",
  "scripts": {
    "clean": "rimraf out/ dist/",
    "build": "tsc && npm run html",
    "html": "copyfiles -u 1 src/**/*.html src/**/*.css out/",
    "prestart": "npm run build",
    "start": "electron .",
    "dist": "electron-packager . --out=dist --overwrite --ignore=src --ignore=tsconfig.json --ignore=package-lock.json --ignore README.md"
  },
  "repository": "https://github.com/Samarkin/CodeAnalyzer-Electron",
  "keywords": [
    "source code",
    "analysis"
  ],
  "author": "Pavel Samarkin",
  "license": "CC0-1.0",
  "devDependencies": {
    "electron": "~1.6.2",
    "copyfiles": "latest",
    "rimraf": "latest"
  },
  "dependencies": {
    "@types/mz": "0.0.32",
    "electron-packager": "^9.1.0",
    "mz": "^2.7.0"
  }
}
